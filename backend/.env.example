# Dharma Realty - Environment Configuration
# Copy this file to .env and fill in your values

# Server
NODE_ENV=development
PORT=4000
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_URL=postgresql://dharma:dharma_secret@localhost:5432/dharma_realty?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-very-secure-jwt-secret-key-replace-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-very-secure-refresh-secret-key-replace-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Encryption (32-char hex string)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=dharma-realty-assets
AWS_CLOUDFRONT_URL=

# Stripe (for payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# SendGrid (for emails)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@dharmarealty.com

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Google (OAuth & Maps)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_MAPS_API_KEY=

# Blockchain (Polygon)
POLYGON_RPC_URL=https://polygon-rpc.com
ETHEREUM_RPC_URL=
CONTRACT_DEPLOYER_PRIVATE_KEY=
PROPERTY_REGISTRY_CONTRACT=

# IPFS (Pinata)
IPFS_PROJECT_ID=
IPFS_PROJECT_SECRET=
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# OpenAI (for AI features)
OPENAI_API_KEY=

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

{
  "name": "dharma-realty",
  "version": "1.0.0",
  "description": "Revolutionary Real Estate Platform with Ancient Wisdom + Cutting-Edge Tech",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm run start",
    "test": "npm run test:backend",
    "test:backend": "cd backend && npm test",
    "migrate": "cd backend && npx prisma migrate dev",
    "migrate:deploy": "cd backend && npx prisma migrate deploy",
    "seed": "cd backend && npm run seed",
    "lint": "npm run lint:backend",
    "lint:backend": "cd backend && npm run lint",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Srujan0798/Rest-iN-U.git"
  },
  "author": "Dharma Realty",
  "license": "PROPRIETARY"
}